# DKAN Client Tools - Environment Configuration
# Copy this file to .env and fill in your DKAN instance details

# DKAN site URL
DKAN_URL=http://dkan.ddev.site

# DKAN credentials (optional for read-only operations)
# Required for: harvest plans, revisions, and other authenticated endpoints
DKAN_USER=admin
DKAN_PASS=admin

# Recording mode (optional)
# Set to "true" to skip mutation operations (create/update/delete)
# Default: true if DKAN_USER is not set, false otherwise
READ_ONLY=true

# Cleanup mode (optional)
# Set to "true" to only perform cleanup operations without creating new records
# Default: false
CLEANUP_ONLY=false
