{
  "name": "dkan-client-tools",
  "version": "0.1.0",
  "private": true,
  "description": "A monorepo of packages containing tools to help developers build frontend applications that work with DKAN data",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build -ws --if-present",
    "build:all": "node scripts/build-orchestrator.js",
    "build:packages": "node scripts/build-orchestrator.js packages",
    "build:deploy": "node scripts/build-orchestrator.js deploy",
    "build:examples": "node scripts/build-orchestrator.js examples",
    "build:drupal": "node scripts/build-orchestrator.js drupal",
    "build:all:drupal": "npm run build:all && cd dkan && ddev drush cr",
    "test": "npm run test -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "typecheck": "npm run typecheck -ws --if-present",
    "clean": "npm run clean -ws --if-present && rm -rf node_modules",
    "dev": "npm run dev -ws --if-present",
    "record:api": "npm run record:api -w @dkan-client-tools/core",
    "record:api:readonly": "npm run record:api:readonly -w @dkan-client-tools/core",
    "create:dictionaries": "npm run create:dictionaries -w @dkan-client-tools/core"
  },
  "keywords": [
    "dkan",
    "open-data",
    "data-catalog",
    "react",
    "tanstack-query",
    "query-client"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  }
}
